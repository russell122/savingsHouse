
mixin program(title, i, val1, val2, val3, val4, val5, val6, val7)
	.program(class= 'program-' + i)

		.program__row.flex

			.program__side

				.program__side-block
					.title.title-2 !{title}
					.program__img
						img.img(src="img/program-ic-"+i+".png", alt="alt")
					a.button.button--accent-bg.hide-xl(href="#") Оставить заявку

			// /.program__side

			.program__col

				.program__table
					.program__tr.program__sum
						.program__label Сумма сбережений:
						.program__val
							span !{val1}

					.program__tr
						.program__label Сроки инвестирования:
						.program__val !{val2}

					.program__tr
						.program__label Процентная ставка:
						.program__val
							span !{val3} 
							| годовых

					.program__tr
						.program__label Зачисление процентов:
						.program__val !{val4}

					.program__tr
						.program__label Обеспечение:
						.program__val !{val5}
						
					.program__tr
						.program__label Досрочное расторжение:
						.program__val !{val6}

					.program__tr
						.program__label Необходимые документы:
						.program__val !{val7}

					.program__tr
						.program__label Получение денежных средств:
						.program__val Наличными в офисе, Переводом на любую карту, Зачислением на счёт сбережения

				// /.program__table

			// /.program__col
		// /.program__row.flex
		
		.program__btn.show-xl
			a.button.button--accent-bg(href="#") Оставить заявку

	// /.program






